{
  "name": "visionary2",
  "version": "1.0.0",
  "description": "A static web game that uses Roboflow's YOLOv8m pose detection to let players \"draw\" target shapes with their body movements using their webcam.",
  "main": "index.html",
  "scripts": {
    "dev": "cd public && python3 -m http.server 3001",
    "dev:firebase": "firebase emulators:start --only hosting,functions",
    "build": "echo \"Static site - no build step needed\"",
    "preview": "python3 -m http.server 8080",
    "test": "jest",
    "test:watch": "jest --watch",
    "precalculate-images": "node scripts/preprocess-targets.js",
    "deploy": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting"
  },
  "keywords": [
    "game",
    "pose-detection",
    "roboflow",
    "yolov8",
    "webcam",
    "computer-vision"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jest": "^30.0.5"
  }
}
